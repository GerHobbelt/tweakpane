{
  "name": "@tweakpane/core",
  "version": "1.0.0-alpha.0",
  "description": "Tweakpane core library",
  "author": "cocopon",
  "license": "MIT",
  "main": "dist/cjs/index.js",
  "types": "dist/cjs/index.d.ts",
  "scripts": {
    "prepare": "run-s clean build",
    "prepublishOnly": "npm test",
    "test": "run-s test:scss test:ts",
    "build": "run-s build:ts",
    "build:ts": "run-p build:ts:*",
    "build:ts:cjs": "tsc --project src/tsconfig-cjs.json",
    "build:ts:es6": "tsc --project src/tsconfig-es6.json",
    "clean": "rimraf .nyc_output dist tweakpane-core-*.tgz",
    "coverage": "nyc --reporter=text --extension '.ts' --exclude '**/*-test.ts' npm run test:ts:dynamic",
    "format": "run-p format:*",
    "format:scss": "prettier --parser scss --write 'lib/sass/**/*.scss'",
    "format:ts": "eslint --ext .ts --fix 'src/**/*.ts'",
    "test:scss": "prettier --parser scss --list-different 'lib/sass/**/*.scss'",
    "test:ts": "run-s test:ts:static test:ts:dynamic",
    "test:ts:dynamic": "TS_NODE_PROJECT='src/tsconfig-cjs.json' mocha --require ts-node/register 'src/**/*-test.ts'",
    "test:ts:dynamic:inspect": "TS_NODE_PROJECT='src/tsconfig-cjs.json' mocha --require ts-node/register 'src/**/*-test.ts' --inspect-brk",
    "test:ts:static": "eslint --ext .ts 'src/**/*.ts'"
  },
  "devDependencies": {
    "@types/assert": "^1.5.4",
    "@types/jsdom": "^16.2.10",
    "@types/mocha": "^8.2.1",
    "@types/node": "^10.12.18",
    "@typescript-eslint/eslint-plugin": "^4.16.1",
    "@typescript-eslint/parser": "^4.16.1",
    "assert": "^2.0.0",
    "autoprefixer": "^9.1.5",
    "eslint": "^7.21.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "jsdom": "^16.5.3",
    "mocha": "^8.3.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "prettier": "^1.15.3",
    "rimraf": "^3.0.2",
    "ts-node": "^7.0.1",
    "tslib": "^2.1.0",
    "typescript": "^4.1.5"
  }
}
